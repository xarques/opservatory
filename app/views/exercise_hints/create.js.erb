function addHint(hintHTML) {
  const hints = document.getElementById('list_hints');
  hints.insertAdjacentHTML('afterbegin', hintHTML);
};

function updateHintBtn() {
  var btn = document.getElementById("button-hint")
  btn.classList.add("disabled")};

function updateSolutionBtn() {
var btn = document.getElementById("button-solution")
btn.classList.remove("disabled")
};

var counter = <%= @next_hint.count %>;
addHint(`<li><i class="fa fa-hand-o-right" aria-hidden="true"></i><%= j @next_hint_first.description.html_safe %></li>`);

if (counter === 1) {
 updateHintBtn();
 updateSolutionBtn();
};


