<% @challenges.each do |challenge| %>
  <div class="col-xs-12 col-sm-6 col-md-4">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path challenge.photo, height: 170, width: 300, crop: :pad %>')">
      <div class="card-category"></div>
      <div class="card-description">
        <h2> <%= challenge.name %></h2>
        <p> <%= challenge.description %></p>
      </div>
      <%= link_to '', challenge_exercises_path(challenge, Exercise.new), method: :post, class: 'card-link' %>
    </div>
  </div>
<% end %>
