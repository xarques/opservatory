<div class="container">
  <h1>Create a challenge</h1>
  <div class="c-new-grid">
    <div class="f-new">
      <ul class="c-new-new-form">
        <%= simple_form_for(@challenge) do |f| %>
          <!-- [...] -->
          <%= f.input :name%>
          <%= f.input :description %>
          <%= f.input :instructions %>
          <%= f.input :level, collection: [0, 1, 2, 3] %>
          <%= f.input :duration %>
          <%#= f.label :category  %>
          <%#= select_tag 'category', options_for_select(@alibis.collect{|alibi| alibi.category}.uniq), :include_blank => 'All' %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit class: "c-new-btn-photo" %>
          <!-- [...] -->
        <% end %>
      </ul>
    </div>
<!--     <div class="text-center">
      <%#= image_tag "create.jpg", height: 400, width: 350, :crop=>"fit", class:'brice' %>
    </div> -->
  </div>
  <!-- method aceEditor is defined in app/javascript/packs/editor.js -->
  <%= javascript_pack_tag 'editor' %>

  <script>
    // methods aceEditor and validateExerciseCallback are defined in app/javascript/packs/editor.js
    const javascriptEditor = aceEditor("javascript-editor", "");
    // validateExerciseCallback('<%#=j raw(@exercise.challenge.schema) %>', javascriptEditor, "validate", "result");
  </script>
</div>
