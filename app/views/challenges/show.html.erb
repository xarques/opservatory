<div class="container">
  <div class="challenge">
    <div class="description">
      <div class="text-center">
        <h2>Instructions</h2>
        <h2><%= @challenge.name %></h2>
        <p><%= @challenge.description %></p>
      </div>
      <div>
        <%= @challenge.instructions.html_safe %>
      </div>
    </div>
    <%= link_to challenge_exercises_path(@challenge, Exercise.new), method: :post do %>
    <button type="button" id="validate" class="btn btn-primary">Start exercise</button>
    <% end %>
  </div>
</div>
